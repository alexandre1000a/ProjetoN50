<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="http://fonts.googleapis.com/css?family=Oswald:400,300,700" rel="stylesheet" type="text/css" />
    <link href="~/Content/menu.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/base.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/ajax")
    @Styles.Render("~/Content/fonts")
    @Styles.Render("~/Content/js")
    @Styles.Render("~/Content/less")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <section>
        <div id="barra">
            <h2>Software</h2>
            <a href="#">
                <img src="~/Content/themes/base/images/btn-sair.png" /></a>
        </div>
    </section>

    <header>
        <div id="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>ALTA PERFORMANCE SUPLEMENTOS</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section>
        <div id="conteudo">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div id='cssmenu'>
                            <ul>
                                <li class='has-sub'><a href='#'><span>Clientes</span></a>
                                    <ul>
                                        <li><a href='~/CadastroCliente/index'><span>Cadastrar Clientes</span></a></li>
                                        <li><a href='~/CadastrarEnderecoCliente/index'><span>Cadastrar Endereço Clientes</span></a></li>
                                        <li><a href='~/GerarVenda/index'><span>Gerar Venda</span></a></li>
                                        <li class='last'><a href='StatusCliente/index'><span>Status Cliente</span></a></li>
                                    </ul>
                                </li>
                                <li class='has-sub'><a href='#'><span>Fornecedor</span></a>
                                    <ul>
                                        <li><a href='~/CadastroFornecedor/index'><span>Cadastrar Fornecedor</span></a></li>
                                        <li><a href='~/CadastrarEnderecoFornecedor/index'><span>Cadastrar Endereço Fornecedor</span></a></li>
                                        <li><a href='~/GerarCompra/index'><span>Gerar Compra</span></a></li>
                                        <li class='last'><a href='~/StatusFornecedor/index'><span>Status Fornecedor</span></a></li>
                                    </ul>
                                </li>
                                <li class='has-sub'><a href='#'><span>Pagamento</span></a>
                                    <ul>
                                        <li><a href='~/QuitarPagamento/index'><span>Quitar Pagamento</span></a></li>
                                        <li class='last'><a href='~/ReceberPagamento/index'><span>Receber Pagamento</span></a></li>
                                    </ul>
                                </li>
                                <li class='has-sub'><a href='#'><span>Relatório</span></a>
                                    <ul>
                                        <li><a href='~/RelatorioPagamento/index'><span>Relatório Pagamento</span></a></li>
                                        <li class='last'><a href='~/RelatorioRecebimento/index'><span>Relatório Recebimento</span></a></li>
                                    </ul>
                                </li>
                                <li class='last'><a href='#'><span>Contatos</span></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8">
                        @RenderBody()

                        @Scripts.Render("~/bundles/jquery")
                        @RenderSection("scripts", required: false)

                        @if (Session.Count == 1)
                        { 

                            <div>
                                @Html.ActionLink("Home", "Index", "HomeLogin")
                                @Html.ActionLink("Sair", "Index", "ValidarUsuario")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer>
        <div id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p>Software Alta Performance Suplementos</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="@Url.Content("~/Scripts/MenuDropDown.js")"></script>

</body>
</html>
